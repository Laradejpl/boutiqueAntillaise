{% extends 'base.html.twig' %}


{% block title %}Gerez Mes adresses - La boutique Antillaise{% endblock %}

{% block content %}

<h1>Gerez mes adresses</h1>

<a href="{{path('account_address')}}">Retour</a>
<hr>

{{ form_start (form) }}
   <div class="container-fluid">
           <div class="row">
               <div class="col-md-12">
                         {{form_row (form.name) }}
               <div>

        <div class="row">
                          <div class="col-md-6">
                                 {{ form_row (form.firstname) }}
                          </div>

                           <div class="col-md-6">
                             {{ form_row (form.lastname) }}
                           </div>
       </div>


        <div class="row">
                          <div class="col-md-6">
                                 {{ form_row (form.company) }}
                          </div>

                           <div class="col-md-6">
                             {{ form_row (form.address) }}
                           </div>
       </div>


       <div class="row">
                          <div class="col-md-6">
                                 {{ form_row (form.city) }}
                          </div>

                           <div class="col-md-6">
                             {{ form_row (form.postal) }}
                           </div>
       </div>

       <div class="row">
                          <div class="col-md-6">
                                 {{ form_row (form.country) }}
                          </div>

                           <div class="col-md-6">
                             {{ form_row (form.phone) }}
                           </div>
       </div>

       <div class="row">
               <div class="col-md-12">
                         {{form_row (form.submit) }}
               <div>








      </div>
  </div>



{{ form_end (form) }}


  
{% endblock %}